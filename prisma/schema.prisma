/**
 * Prisma Schema
 * 
 * Database: PostgreSQL (Supabase)
 * ORM: Prisma 6
 * 
 * Models:
 * - Teacher      → creates and manages subjects and lessons
 * - Student      → enrolls and tracks progress through lessons
 * - Subject      → a course owned by a teacher, contains lessons
 * - Lesson       → individual learning unit under a subject
 * - Progress     → tracks student completion and score per lesson
 * - Badge        → milestone rewards defined by the system
 * - StudentBadge → tracks which student earned which badge
 * 
 * IDs use auto increment integers for simplicity and easier debugging.
 * Foreign keys use Int to match.
 */

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String    // stored as bcrypt hash, never plain text
  subjects  Subject[]
  createdAt DateTime  @default(now())
}

model Student {
  id        Int            @id @default(autoincrement())
  name      String
  lrn       String         @unique     // 12-digit Learner Reference Number, stored as string
  email     String         @unique
  password  String                     // stored as bcrypt hash, never plain text
  xp        Int            @default(0) // total experience points earned
  level     Int            @default(1) // level up every 100 XP
  progress  Progress[]
  badges    StudentBadge[]             // badges earned by this student
  createdAt DateTime       @default(now())
}

model Subject {
  id        Int       @id @default(autoincrement())
  title     String
  teacher   Teacher   @relation(fields: [teacherId], references: [id])
  teacherId Int       // foreign key — links subject to its owner teacher
  lessons   Lesson[]
  createdAt DateTime  @default(now())
}

model Lesson {
  id        Int        @id @default(autoincrement())
  title     String
  content   String
  subject   Subject    @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  subjectId Int        // foreign key — links lesson to its parent subject
  progress  Progress[]
  createdAt DateTime   @default(now())
}

model Progress {
  id          Int      @id @default(autoincrement())
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId   Int      // foreign key — which student
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId    Int      // foreign key — which lesson
  completed   Boolean  @default(false)
  score       Int?     // optional — not all lessons have scores
  xpEarned    Int      @default(0)  // XP awarded for completing this lesson
  createdAt   DateTime @default(now())
}

// Badge definitions — created by the system, not by teachers or students
model Badge {
  id          Int            @id @default(autoincrement())
  name        String         @unique
  description String
  xpRequired  Int            // minimum XP needed to earn this badge
  students    StudentBadge[]
  createdAt   DateTime       @default(now())
}

// Junction table — tracks which student earned which badge and when
model StudentBadge {
  id        Int      @id @default(autoincrement())
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId Int
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  badgeId   Int
  earnedAt  DateTime @default(now())
}